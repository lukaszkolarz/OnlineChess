<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern> %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n </Pattern>
            </PatternLayout>
        </Console>
        <File name="ClientNetwork" fileName="ClientNetwork.log">
            <PatternLayout>
                <Pattern> %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n </Pattern>
            </PatternLayout>
        </File>

        <File name="Server" fileName="Server.log">
            <PatternLayout>
                <Pattern> %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n </Pattern>
            </PatternLayout>
        </File>

        <Async name="ClientNetworkAsync">
            <AppenderRef ref="ClientNetwork"/>
        </Async>
        <Async name="ServerAsync">
            <AppenderRef ref="Server"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="clientNetwork" additivity="false" level="info">
            <AppenderRef ref="ClientNetworkAsync" />
        </Logger>

        <Logger name="server" additivity="false" level="info">
            <AppenderRef ref="ServerAsync" />
        </Logger>

        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>

